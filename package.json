{
  "name": "fonts-svg",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "res:build": "rescript",
    "res:clean": "rescript clean",
    "res:dev": "rescript -w",
    "esb:dev": "http-server dist -p 8083 -c-1 --cors && npm run esb:dev:esbuild && npm run esb:dev:tailwind",
    "esb:dev:esbuild": "node esbuild.js --watch",
    "esb:dev:tailwind": "tailwindcss -i src/index.css -o src/tailwind.css --watch",
    "esb:build": "rm -rf dist & npm run esb:build:styles & npm run esb:build:esbuild",
    "esb:build:esbuild": "NODE_ENV=production node esbuild.js",
    "esb:build:styles": "NODE_ENV=production tailwindcss -i src/index.css -o src/tailwind.css --minify"
  },
  "dependencies": {
    "@greenlabs/ppx-spice": "0.2.1-rc.1",
    "@rescript/core": "1.1.0",
    "@rescript/react": "^0.11.0",
    "makerjs": "^0.18.1",
    "opentype-layout": "^1.1.0",
    "opentype.js": "^1.3.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rescript": "11.1.0-rc.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.15",
    "postcss": "^8.4.28",
    "tailwindcss": "^3.3.3",
    "esbuild": "^0.19.12",
    "esbuild-plugin-copy": "^2.1.1",
    "http-server": "^14.1.1"
  }
}
